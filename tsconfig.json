{
  "compilerOptions": {
    "target": "ES2015",
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noEmitHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "tools/build",
    "dist"
  ],
  "compileOnSave": false
}
